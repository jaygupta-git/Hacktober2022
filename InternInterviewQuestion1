// Pattern for the question was a pyramid
    *
   * *
  * * *
 * * * *
* * * * *


#include<bits/stdc++.h>
using namespace std;

int main()
{
    int n;
    cin>>n;

    for(int i=0;i<n;i++)
    {
        for(int j=0;j<(n+i);j++)
        {
if(j>=(n-1-i) and j<=(n-1+i))
{
    cout<<"*";
}
else cout<<"$";
        }
        cout<<endl;
    }

    return 0;
}

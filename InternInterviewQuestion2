// Question 2

#include<bits/stdc++.h>
using namespace std;

int main()
{
    int n;
    cin>>n;

    for(int i=0;i<n;i++)
    {
        for(int j=0;j<(n+i);j++)
        {
            if(j>=(n-1-i) and j<=(n-1+i))
            {
                if(i%2==0 and j%2!=0) cout<<"*";
                else if(i%2!=0 and j%2==0) cout<<"*";
                else cout<<" ";

            }
            //initial spaces before stars
            else cout<<" ";
        }
        cout<<endl;
    }

    return 0;
}
